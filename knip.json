{
  "workspaces": {
    "frontend": {
      "entry": [
        "app/**/*.tsx",
        "src/hooks/*.ts",
        "src/contexts/*.tsx",
        "src/database/database.ts",
        "src/database/index.ts",
        "src/features/tier/hooks/useCheckout.ts"
      ],
      "project": ["src/**/*.{ts,tsx}", "app/**/*.{ts,tsx}"],
      "ignore": ["**/__tests__/**", "**/*.test.{ts,tsx}"]
    },
    "backend": {
      "entry": ["scripts/*.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["**/__tests__/**", "**/*.test.ts"]
    }
  },
  "ignore": [".sync/**"],
  "ignoreDependencies": ["babel-preset-expo", "eslint-config-expo"],
  "ignoreExportsUsedInFile": true
}
